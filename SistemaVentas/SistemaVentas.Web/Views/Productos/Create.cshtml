@model SistemaVentas.Web.Models.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="row">
    <div class="col-12">
        <h2 class="page-title">
            <i class="fas fa-plus-circle text-danger"></i> Crear Producto
        </h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Codigo" class="form-label"></label>
                            <input asp-for="Codigo" class="form-control" placeholder="Ej: 001" />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Producto" class="form-label"></label>
                            <input asp-for="Producto" class="form-control" placeholder="Nombre del producto" />
                            <span asp-validation-for="Producto" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Precio" class="form-label"></label>
                            <input asp-for="Precio" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Stock" class="form-label"></label>
                            <input asp-for="Stock" class="form-control" type="number" placeholder="0" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}